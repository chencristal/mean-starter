include ../navbar.pug

.container
  .row
    .col-md-12
      h2 Users
  .row
    .col-md-12
      a.btn.btn-default.btn-primary(href="/users/new") New User
  .row
    .col-md-12
      table.table.table-striped.users
        thead
          tr
            td
              strong Name
            td.email
              strong Email
            td
        tbody
          tr(ng-repeat="user in users")
            td {{ user.name }}
            td {{ user.email }}
            td.actions
              button.btn.btn-info.btn-sm(title="View" ng-click="userDetails(user)" ng-disabled="isSaving")
                span.glyphicon.glyphicon-eye-open
              button.btn.btn-warning.btn-sm(title="Edit" ng-click="editUser(user)" ng-disabled="isSaving")
                span.glyphicon.glyphicon-pencil
              button.btn.btn-danger.btn-sm(title="Delete" ng-click="deleteUser(user)" ng-disabled="isSaving")
                span.glyphicon.glyphicon-trash
