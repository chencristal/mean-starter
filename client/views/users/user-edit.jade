include ../navbar.jade

div(ng-show="isLoading")
  include ../common/spinner.jade
.container(ng-hide="isLoading")
  .row
    .col-md-12
      h2 Edit User {{ ::user.name }}
  .row
    .col-md-12
      include ./form.jade
  .row
    .col-md-12
      .buttons.text-right
        a.btn.btn-default(href="/users") Cancel
        button.btn.btn-primary(ng-click="saveUser()" ng-disabled="isSaving") Save
